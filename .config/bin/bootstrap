#!/bin/sh

init_submodule()
{
  if [ ! -r "$sub_path/.git" ]
  then
    msg "Initialising module $sub_name in $sub_path."
    run git submodule update --init "$sub_path"
  fi
}

tic()
{
  case "$dist" in
    arch)
      infodir="/usr/share/terminfo"
      ;;
    ubuntu)
      infodir="/etc/terminfo"
      ;;
  esac

  for info in "$@"
  do
    run sudo tic -o "$infodir" "$info"
  done

  run sudo chmod og+rX -R "$infodir"
}

cfgbindir="$(dirname "$(readlink -e "$0")")" &&
. "$cfgbindir/utils.sh" ||
exit $?

chdir_top
check_dist

case "$1" in
  git)
    origin='git@github.com:benoit-pierre/config-dotfiles.git'
    ;;
  http|'')
    origin='https://github.com/benoit-pierre/config-dotfiles.git'
    ;;
  *)
    exit 1
    ;;
esac
msg "Setting remote origin to $origin."
run git config --local remote.origin.url "$origin"

msg "Initializing submodules."
foreach_submodule init_submodule

msg "Installing packages."
case "$dist" in
  arch)
    packages=''
    for pkg in \
      atool \
      awesome \
      bdf-unifont \
      calc \
      ccache \
      cscope \
      ctags \
      diffstat \
      diffutils \
      distcc \
      expac \
      fdupes \
      feh \
      geeqie \
      git \
      gnupg \
      gvim \
      hardlink \
      hddtemp \
      hdparm \
      htop \
      iotop \
      keepassx \
      keychain \
      lftp \
      libnotify \
      ltrace \
      mpd \
      mplayer \
      ncmpcpp \
      numlockx \
      parcellite \
      patch \
      patchutils \
      pavucontrol \
      perl-term-readkey \
      powertop \
      procps-ng \
      psmisc \
      ranger \
      ruby \
      s-nail \
      screen \
      smartmontools \
      sshfs \
      strace \
      subdownloader \
      tmux \
      valgrind \
      w3m \
      wget \
      x11-ssh-askpass \
      x11vnc \
      xdg-user-dirs \
      xdg-utils \
      xdotool \
      xorg-server-xephyr \
      xorg-xauth \
      xsel \
      xterm \
      zsh \
      ;
    do
      pacman --query "$pkg" &>/dev/null || packages="$packages${packages:+ }$pkg"
    done
    if [ -n "$packages" ]
    then
      run sudo pacman --sync $packages
    fi
    if which packer-color &>/dev/null
    then
      for pkg in \
        cgdb \
        kdiff3-qt \
        xkbset \
        ssvnc \
        ;
      do
        pacman --query "$pkg" &>/dev/null || run sudo packer-color "$pkg"
      done
    fi
    ;;
  ubuntu)
    run sudo apt-get --verbose-versions install \
      apcalc \
      apt-file \
      atool \
      ccache \
      cgdb \
      console-data \
      cscope \
      debian-goodies \
      diffstat \
      diffutils \
      distcc \
      exuberant-ctags \
      fdupes \
      git \
      hardlink \
      hddtemp \
      hdparm \
      heirloom-mailx \
      htop \
      iotop \
      keychain \
      lftp \
      libterm-readkey-perl \
      ltrace \
      mpd \
      ncmpcpp \
      ncurses-term \
      patch \
      patchutils \
      powertop \
      procps \
      psmisc \
      ranger \
      ruby \
      screen \
      smartmontools \
      sshfs \
      strace \
      tmux \
      valgrind \
      vim-nox \
      w3m \
      wget \
      xdg-user-dirs \
      zsh \
      ;
    if [ -n "$DISPLAY" ]
    then
      run sudo apt-get --verbose-versions install \
        awesome \
        feh \
        geeqie \
        gnupg-agent \
        kdiff3-qt \
        keepassx \
        libnotify-bin \
        mplayer \
        numlockx \
        parcellite \
        pavucontrol \
        ssh-askpass \
        ssvnc \
        subdownloader \
        unifont \
        vim-gtk \
        x11vnc \
        xauth \
        xdg-utils \
        xdotool \
        xkbset \
        xsel \
        xserver-xephyr \
        xterm \
        ;
    fi
    ;;
esac

msg "Installing terminfo entries for screen and tmux"
tic .config/screen/xterm-scr-256color .config/tmux/xterm-tmux-256color

msg "Installing xsession.desktop"
run sudo install -m644 .config/x11/xsession-"$dist".desktop /usr/share/xsessions/xsession.desktop

